{
  "name": "myleshyson/fusion",
  "description": "A simple tool to manage AI guideline configurations",
  "bin": ["bin/fusion"],
  "autoload": {
    "psr-4": {
      "Myleshyson\\Fusion\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Tests\\": "tests/"
    }
  },
  "authors": [
    {
      "name": "Myles Hyson",
      "email": "myleshyson@ufl.edu"
    }
  ],
  "require": {
    "php": "^8.2",
    "laravel/prompts": "^0.3.10",
    "symfony/console": "^7.2",
    "nunomaduro/termwind": "^2.3",
    "symfony/yaml": "^7.2"
  },
  "require-dev": {
    "phpstan/phpstan": "^2.1",
    "laravel/pint": "^1.27",
    "pestphp/pest": "^3.0 || ^4.0",
    "symfony/var-dumper": "^7.2",
    "zenstruck/console-test": "^1.8",
    "mockery/mockery": "^1.6"
  },
  "scripts": {
    "pint": "pint",
    "phpstan": "phpstan",
    "pest": "pest",
    "build": "@php build.php"
  },
  "config": {
    "allow-plugins": {
      "pestphp/pest-plugin": true
    }
  }
}

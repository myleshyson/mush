#!/usr/bin/env php
<?php

// When installed as a dependency, use the parent project's autoloader
// When running standalone or as a phar, use our own autoloader
if (file_exists(__DIR__.'/../../../autoload.php')) {
    require __DIR__.'/../../../autoload.php';
} else {
    require __DIR__.'/../vendor/autoload.php';
}

use Myleshyson\Fusion\App;

$app = App::build();
$app->run();
